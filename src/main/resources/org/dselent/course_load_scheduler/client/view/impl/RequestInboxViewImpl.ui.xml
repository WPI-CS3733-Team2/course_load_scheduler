<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	.center
	{
		position: absolute;
		width:500px;
		height:250px;
		margin-left:0px;
	}

	.left
	{
		position: absolute;
		width:500px;
		height:250px;
		margin-left:0px;
		margin-top:0px;
	}
	
    .accountDetails-panel
	{
		background-color:rgb(255,255,255);
	}
	
	.view-label
	{
		font-family:Calibri;
		font-size:32px;
		color:rgb(0, 0, 0);
	}
	
	.accountDetails-form
	{
		border-style:solid;
		border-width:2px;
		border-color:black;
		margin-top:20px;
		margin-left:50px;
		margin-right:50px;
	}
	
	.accountDetails-label
	{
		font-family:Times New Roman;
		font-style:normal;
		font-size:14px;
		font-weight:bold;
		font-stretch:normal;
		font-variant:normal;
		color:rgb(0, 0, 0);
		float:right;
		margin-left:0px;
		margin-right:8px;
		margin-top:0px;
		margin-bottom:0px;
		padding-left:0px;
		padding-right:0px;
		padding-top:0px;
		padding-bottom:0px;
	}
	 
	.accountDetails-text
	{
		font-family:Times New Roman;
		font-size:20px;
		font-weight: normal;
		float:left;
	 }
	 
	.warning-label
	{
		font-family:Times New Roman;
		font-size:18px;
		font-weight: bold;
		color: rgb(255, 0, 0);
		margin-top:4px;
		padding-left:50px;
		padding-right:50px;
	}
	
	.accountDetails-button
	{
		font-family:Times New Roman;
		font-size:14px;
		float:right;
		margin-top:10px;
		margin-right:20px;
		margin-bottom:4px;
	}

	.button {
    	color: white;
    	padding: 10px 20px;
    	text-align:left;
    	text-decoration: none;
    	font-size: 16px;
	}

	.button_request {
    	color: black;
    	padding: 10px 20px;
    	text-align:left;
    	text-decoration: none;
    	font-size: 16px;
	}

	.button_pos {
    	position:relative;
    	top: 50%;
    	left: 4%;
	}

	.button_type {
		background-color: Transparent;
    	background-repeat:no-repeat;
    	border: none;
    	cursor:pointer;
    	overflow: hidden;
    	outline:none;
	}

	.grid_tab {
  		display: grid;
  		grid-gap: 10px;
  		grid-auto-rows: 0px;
		background-color: rgb(172,43,55);
	}
	
	.grid_inbox {
		border-style:solid;
		border-width:2px;
    	border-radius: 10px;
    	background: rgb(200,200,200);
    	padding: 10px; 
    	width: 1000px;
    	height: 40px; 
	}

	.listBox {
		margin-top:10px;
		margin-left:10px;
	}

	</ui:style>
	<g:HTMLPanel>
	<g:VerticalPanel ui:field="RequestInboxPanel" addStyleNames="{style.accountDetails-panel},{style.center}" horizontalAlignment="center" width="1028px" height="547px">
		<g:Grid addStyleNames="{style.grid_inbox}">
			<g:row>
				<g:customCell>
					<g:Label ui:field="viewLabel" width="59px">Inbox</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Button text="Approve" ui:field="ApproveButton" addStyleNames="{style.button_request},{style.button_pos},{style.button_type}" width="92px"></g:Button>
				</g:customCell>
				<g:customCell>
					<g:Button text="Deny" ui:field="DenyButton" addStyleNames="{style.button_request},{style.button_pos},{style.button_type}" width="92px"></g:Button>
				</g:customCell>
				<g:customCell>
					<g:Button text="Delete" ui:field="DeleteButton" addStyleNames="{style.button_request},{style.button_pos},{style.button_type}" width="92px"></g:Button>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:FlexTable ui:field="RequestListFlexTable" addStyleNames="{style.listBox}">
					</g:FlexTable>
				</g:customCell>
				
				<g:customCell>
					<g:VerticalPanel height="380px" width="758px">
						<g:Label addStyleNames="{style.accountDetails-text}">Request: Course CS </g:Label>
						<g:Label ui:field="detailCourseLabel" addStyleNames="{style.accountDetails-text}"> </g:Label>
						<g:Label addStyleNames="{style.accountDetails-text}">Section: </g:Label>
						<g:Label ui:field="detailSectionLabel" addStyleNames="{style.accountDetails-text}"> </g:Label>
						<g:Label addStyleNames="{style.accountDetails-text}">User: </g:Label>
						<g:Label ui:field="detailFacultyIdLabel" addStyleNames="{style.accountDetails-text}"> </g:Label>
						<g:Label addStyleNames="{style.accountDetails-text}">Request ID: </g:Label>
						<g:Label ui:field="detailRequestIdLabel" addStyleNames="{style.accountDetails-text}"> </g:Label>
						<g:Label addStyleNames="{style.accountDetails-text}">======================================</g:Label>
						<g:Label addStyleNames="{style.accountDetails-text}">Request Message: </g:Label>
						<g:Label ui:field="detailMessageLabel" addStyleNames="{style.accountDetails-text}"> </g:Label>
					</g:VerticalPanel>
				</g:customCell>
			</g:row>
		</g:Grid>	
	
	 
	
</g:VerticalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 